pipeline {
  agent {
    label 'master'
  }
  tools {nodejs "nodejs"}
  stages {
    stage('Clear Node Modules') {
      steps { sh 'rm -r node_modules' }
    }

    stage('Install') {
      steps { sh 'npm install' }
    }

    stage('Test') {
      steps { sh 'npm run test' }
    }

    stage('Build') {
      steps { sh 'npm run build' }
    }
  }
}
